# Telegram bot token from @BotFather
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Optional: comma-separated list of Telegram user IDs allowed to use the bot.
# Leave empty to allow anyone.
ALLOWED_USER_IDS=

# Optional: per-request max usernames to check (default 200)
MAX_BULK=200

# Optional: timeout seconds per request (default 10.0)
TIMEOUT=10.0

# Optional: threads (default 5, capped at 5 to avoid 429)
THREADS=5
